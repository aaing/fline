<h2><%= link_to @room.key, edit_room_path(@room) =%><span class='caret'></span></h2>
<%= render partial: "messages/message", collection: @messages %>
  <div class='navibar navbar-default navbar-fixed-bottom'>
    <div class="posting_form top_content">
    <header class="posting_header">
      <div class="posting_image icon_image" style="background-image: url(<%= current_user.avatar.url(:medium) %>);"></div>
      <div class="posting_user_info user_info">
        <%= current_user.name %>
      </div>
    </header>
    <%= form_for([@room, @message]) do |f| %>
      <%= f.text_field :text, placeholder: "メッセージを入力" %>
      <%= f.submit "送信" %>
    <% end %>
  </div>
  </div>

